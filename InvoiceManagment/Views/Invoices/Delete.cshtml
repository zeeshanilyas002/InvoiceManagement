@model InvoiceManagement.Models.Invoice

@{
    ViewData["Title"] = "Delete Invoice";
}

<h1>Delete Invoice</h1>

<h3>Are you sure you want to delete this invoice?</h3>

<div>
    <p><strong>Invoice ID:</strong> @Model.InvoiceId</p>
    <p><strong>Customer Name:</strong> @Model.CustomerName</p>
    <p><strong>Invoice Date:</strong> @Model.InvoiceDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString()</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.InvoiceId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
