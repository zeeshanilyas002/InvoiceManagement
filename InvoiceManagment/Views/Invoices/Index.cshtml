@model IEnumerable<InvoiceManagement.Models.Invoice>

@{
    ViewData["Title"] = "Invoices";
}

<h1>Invoices</h1>

<!-- Search Form -->
<form method="get" id="invoiceSearchForm" class="mb-3">
    <div class="row">
        <!-- Search by Customer Name -->
        <div class="col-md-4">
            <label for="searchTerm">Customer Name</label>
            <input type="text" name="searchTerm" id="searchTerm" class="form-control" placeholder="Search by Customer Name" />
        </div>
        <!-- Search by Invoice Date -->
        <div class="col-md-4">
            <label for="searchDate">Invoice Date</label>
            <input type="date" name="searchDate" id="searchDate" class="form-control" />
        </div>
        <!-- Add New Invoice -->
        <div class="col-md-2 offset-md-2">
            <label>&nbsp;</label>
            <a asp-action="Create" class="btn btn-success w-100">Add New Invoice</a>
        </div>
    </div>
</form>

<!-- Invoice Table -->
<table id="invoiceTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Customer Name</th>
            <th>Invoice Date</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var invoice in Model)
            {
                <tr>
                    <td>@invoice.InvoiceId</td>
                    <td>@invoice.CustomerName</td>
                    <td>@invoice.InvoiceDate.ToString("yyyy-MM-dd")</td>
                    <td>@invoice.TotalAmount.ToString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@invoice.InvoiceId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@invoice.InvoiceId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    <script>
        $(document).ready(function () {
            // Initialize DataTable
            const table = $('#invoiceTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true
            });

            // Custom search handling for form fields
            $('#searchTerm, #searchDate').on('keyup change', function () {
                const term = $('#searchTerm').val().toLowerCase();
                const date = $('#searchDate').val();

                table.columns(1).search(term, true, false);
                table.columns(2).search(date, true, false).draw();
            });
        });
    </script>
}
